// https://github.com/Azure/azure-quickstart-templates/blob/master/201-vm-dynamic-data-disks-selection/azuredeploy.json
{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templateUriPrefix": {
            "defaultValue": "https://raw.githubusercontent.com/VCHDecisionSupport/Azure_IaaS/master/json_deployment_templates/linked_templates/",
            "type": "string"
        },
        "storageAccountName": {
            "defaultValue": "vchstorageaccountgac",
            "type": "string"
        },
        "virtualNetworkName": {
            "defaultValue": "vchds-vnettest",
            "type": "string"
        },
        "virtualNetworkIpRange": {
            "defaultValue": "192.168.0.0/16",
            "type": "string"
        },
        "dnsServerIp": {
            "defaultValue": "192.168.0.0",
            "type": "string"
        },
        "workloadConfigs": {
            "type": "array",
            "defaultValue": [{
                    "workloadName": "addc",
                    "addressPrefix": "192.168.0.0/24",
                    "vmCount": 1
                },
                {
                    "workloadName": "dsdw",
                    "addressPrefix": "192.168.1.0/24",
                    "vmCount": 1
                }, {
                    "workloadName": "sharepoint",
                    "addressPrefix": "192.168.2.0/24",
                    "vmCount": 3
                }
            ]
        }
    },
    "variables": {
        "subnetCount": "[length(parameters('workloadConfigs'))]",
        "subnetsUri": "[concat(parameters('templateUriPrefix'),'azuredeploy_subnets.json')]"
    },
    "resources": [{
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_GRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "name": "[parameters('storageAccountName')]",
            "apiVersion": "2016-01-01",
            "location": "canadacentral",
            "tags": {},
            "properties": {},
            "dependsOn": []
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('virtualNetworkName')]",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('virtualNetworkIpRange')]"
                    ]
                },
                "dhcpOptions": {
                    "dnsServers": [
                        "[parameters('dnsServerIp')]"
                    ]
                },
                "subnets": []
            }
        }
