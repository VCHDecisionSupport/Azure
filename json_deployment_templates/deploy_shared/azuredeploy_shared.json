{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templateUriPrefix": {
            "defaultValue": "https://raw.githubusercontent.com/VCHDecisionSupport/Azure_IaaS/master/json_deployment_templates/deploy_shared/",
            "type": "string"
        }
    },
    "variables": {
        "vnetTemplateUri": "[concat(parameters('templateUriPrefix'),'azuredeploy_vnet.json')]",
        "storageTemplateUri": "[concat(parameters('templateUriPrefix'),'azuredeploy_storage.json')]",
        "vnetParametersUri": "[concat(parameters('templateUriPrefix'),'azuredeploy_vnet.parameters.json')]",
        "storageParametersUri": "[concat(parameters('templateUriPrefix'),'azuredeploy_storage.parameters.json')]"
    },
    "resources": [{
            "comments": "deploys vnet",
            "apiVersion": "2015-01-01",
            "name": "linkedTemplateVnet",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vnetTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('vnetParametersUri')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "comments": "deploys storage account",
            "apiVersion": "2015-01-01",
            "name": "linkedTemplateStorage",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('storageTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('storageParametersUri')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        }
    ]
}