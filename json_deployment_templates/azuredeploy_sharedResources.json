// https://github.com/Azure/azure-quickstart-templates/blob/master/201-vm-dynamic-data-disks-selection/azuredeploy.json
{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templateUriPrefix": {
            "type": "string"
        },
        "storageAccountName": {
            "defaultValue": "vchstorageaccountgac",
            "type": "string"
        },
        "virtualNetworkName": {
            "defaultValue": "vchds-vnettest",
            "type": "string"
        },
        "virtualNetworkIpRange": {
            "defaultValue": "192.168.0.0/16",
            "type": "string"
        },
        "dnsServerIp": {
            "defaultValue": "192.168.0.0",
            "type": "string"
        },
        "workloadConfigs": {
            "type": "array",
            "defaultValue": [{
                    "workloadName": "addc",
                    "nsgName": "addc-nsg",
                    "addressPrefix": "192.168.0.0/24",
                    "vmCount": 1
                },
                {
                    "workloadName": "dsdw",
                    "nsgName": "dsdw-nsg",
                    "addressPrefix": "192.168.1.0/24",
                    "vmCount": 1
                },
                {
                    "workloadName": "sharepoint",
                    "nsgName": "sharepoint-nsg",
                    "addressPrefix": "192.168.2.0/24",
                    "vmCount": 3
                }
            ]
        }
    },
    "variables": {
        "subnetUri": "[concat(parameters('templateUriPrefix'),'azuredeploy_subnet.json')]"
    },
    "resources": [
        // {
        //   "type": "Microsoft.Storage/storageAccounts",
        //   "sku": {
        //     "name": "Standard_GRS",
        //     "tier": "Standard"
        //   },
        //   "kind": "Storage",
        //   "name": "[parameters('storageAccountName')]",
        //   "apiVersion": "2016-01-01",
        //   "location": "canadacentral",
        //   "tags": {},
        //   "properties": {},
        //   "dependsOn": []
        // },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('virtualNetworkName')]",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('virtualNetworkIpRange')]"
                    ]
                },
                "dhcpOptions": {
                    "dnsServers": [
                        "[parameters('dnsServerIp')]"
                    ]
                },
                "subnets": []
            }
        },
        {
            "comments": "deploys subnets",
            "apiVersion": "2015-01-01",
            "name": "linkedTemplateSubnet",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('subnetUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "templateUriPrefix": {
                        "value": "[parameters('templateUriPrefix')]"
                    },
                    "virtualNetworkName": {
                        "value": "[parameters('virtualNetworkName')]"
                    }
                }
            }
        }
    ]
}