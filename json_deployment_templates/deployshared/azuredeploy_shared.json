// https://github.com/Azure/azure-quickstart-templates/blob/master/201-vm-dynamic-data-disks-selection/azuredeploy.json
{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templateUriPrefix": {
            "defaultValue": "https://raw.githubusercontent.com/VCHDecisionSupport/Azure_IaaS/master/json_deployment_templates/deployshared",
            "type": "string"
        },
        "storageAccountName": {
            "defaultValue": "vchstorageaccountgac",
            "type": "string"
        },
        "virtualNetworkName": {
            "defaultValue": "vchds-vnettest",
            "type": "string"
        },
        "virtualNetworkIpRange": {
            "defaultValue": "192.168.0.0/16",
            "type": "string"
        },
        "dnsServerIp": {
            "defaultValue": "192.168.0.0",
            "type": "string"
        }
    },
    "variables": {
        "vnetTemplateUri": "[concat(parameters('templateUriPrefix'),'azuredeploy_vnet.json')]",
        "storageTemplateUri": "[concat(parameters('templateUriPrefix'),'azuredeploy_storage.json')]",
        "sharedParametersUri": "[concat(parameters('templateUriPrefix'),'azuredeploy_parameters.json')]"
    },
    "resources": [{
            "comments": "deploys vnet",
            "apiVersion": "2015-01-01",
            "name": "linkedTemplateVnet",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vnetTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('sharedParametersUri')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "comments": "deploys storage account",
            "apiVersion": "2015-01-01",
            "name": "linkedTemplateStorage",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('storageTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('sharedParametersUri')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        }
    ]
}